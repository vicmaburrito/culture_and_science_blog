<p id="notice" class="m-0 p-0"><%= notice %></p>
<div class="row categories-container m-0 p-0">
  <% @categories.each do |cat| %>
    <div class="col-3 m-0 p-0">
      <div class="half">
        <div class="d-flex flex-column">
          <div class="d-flex m-2 p-2 flex-column">
            <%= content_tag :p, @category.name %>
            <%= content_tag :h2, cat.title %>
            <%= link_to 'Read more', cat, class:'' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>